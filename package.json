{
  "name": "home-swap-platform",
  "version": "1.0.0",
  "description": "A web-based platform for exchanging personal items within the community",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "docker:up": "docker-compose up -d mongodb mongo-express",
    "docker:down": "docker-compose down",
    "docker:test": "docker-compose --profile test up -d",
    "docker:logs": "docker-compose logs mongodb",
    "docker:logs:express": "docker-compose logs mongo-express"
  },
  "keywords": [
    "swap",
    "exchange",
    "community",
    "items"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ejs": "^4.0.1",
    "express": "^5.2.1",
    "materialize-css": "^1.0.0",
    "mongoose": "^9.1.4"
  },
  "devDependencies": {
    "fast-check": "^4.5.3",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2"
  }
}
