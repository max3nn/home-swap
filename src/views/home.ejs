<!-- How It Works Section -->
<section id="how-it-works" class="how-it-works">
    <div class="container">
        <div class="center">
            <h2 class="section-title">How it works</h2>
            <p class="section-subtitle">Start swapping in four simple steps</p>
        </div>
        <div class="row">
            <div class="col s12 m3">
                <div class="step-container center">
                    <div class="step-number">1</div>
                    <h5>Create Account</h5>
                    <p>Sign up free with just your email. Set up your profile in minutes.</p>
                </div>
            </div>
            <div class="col s12 m3">
                <div class="step-container center">
                    <div class="step-number">2</div>
                    <h5>List Items</h5>
                    <p>Post items with photos and descriptions. Make them discoverable.</p>
                </div>
            </div>
            <div class="col s12 m3">
                <div class="step-container center">
                    <div class="step-number">3</div>
                    <h5>Browse & Request</h5>
                    <p>Find items you want and send swap requests to owners.</p>
                </div>
            </div>
            <div class="col s12 m3">
                <div class="step-container center">
                    <div class="step-number">4</div>
                    <h5>Exchange</h5>
                    <p>Coordinate meetups and complete your successful swap.</p>
                </div>
            </div>
        </div>
    </div>
</section>

