<!-- Account/Profile Section -->
<section style="padding: 56px 0; min-height: calc(100vh - 64px - 200px); background-color: hsl(var(--background));">
  <div class="container">
    <div class="row" style="margin-bottom: 18px;">
      <div class="col s12">
        <h2 style="font-size: 2rem; font-weight: 700; color: hsl(var(--foreground)); margin: 0 0 6px;">My Account</h2>
        <p style="color: hsl(var(--muted-foreground)); margin: 0;">Your profile details.</p>
      </div>
    </div>

    <div class="row">
      <div class="col s12">
        <div style="background-color: hsl(var(--card)); border: 1px solid hsl(var(--border)); border-radius: var(--radius); padding: 22px 22px; box-shadow: 0 4px 16px rgba(0,0,0,0.04);">
          <div style="display:flex; align-items:center; justify-content: space-between; gap: 14px; flex-wrap: wrap;">
            <div style="display:flex; align-items:center; gap: 12px;">
              <div style="width: 52px; height: 52px; border-radius: 50%; background-color: hsl(var(--muted)); display:flex; align-items:center; justify-content:center; border: 1px solid hsl(var(--border));">
                <i class="material-icons" style="color: hsl(var(--muted-foreground)); font-size: 30px;">account_circle</i>
              </div>
              <div>
                <div style="font-weight: 800; color: hsl(var(--foreground)); font-size: 1.25rem; line-height: 1.2;"><%= profile.username %></div>
                <div style="color: hsl(var(--muted-foreground)); font-size: 0.9rem;">Role: <%= profile.userrole %></div>
              </div>
            </div>
            <div style="display:flex; gap: 10px;">
              <a href="/account/edit" class="btn" style="background-color: hsl(var(--primary)); border-radius: 999px; box-shadow: none;">
                <i class="material-icons left">edit</i>
                Edit Account
              </a>
            </div>
          </div>

          <div class="row" style="margin: 18px -0.75rem 0;">
            <div class="col s12 m6" style="margin-bottom: 12px;">
              <div style="background-color: hsl(var(--muted)); border: 1px solid hsl(var(--border)); border-radius: var(--radius); padding: 16px;">
                <div style="font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.06em; color: hsl(var(--muted-foreground));">Email</div>
                <div style="color: hsl(var(--foreground)); font-weight: 600; font-size: 1rem; margin-top: 2px;"><%= profile.email %></div>
              </div>
            </div>
            <div class="col s12 m6" style="margin-bottom: 12px;">
              <div style="background-color: hsl(var(--muted)); border: 1px solid hsl(var(--border)); border-radius: var(--radius); padding: 16px;">
                <div style="font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.06em; color: hsl(var(--muted-foreground));">User ID</div>
                <div style="color: hsl(var(--foreground)); font-weight: 600; font-size: 1rem; margin-top: 2px; word-break: break-all;"><%= profile.userId %></div>
              </div>
            </div>
          </div>

          <div style="margin-top: 6px; color: hsl(var(--muted-foreground)); font-size: 0.9rem;">
            Keep your profile information up to date.
          </div>
        </div>
      </div>
    </div>

    <!-- Swap Requests Section -->
    <div class="row" style="margin-top: 24px;">
      <div class="col s12">
        <div style="background-color: hsl(var(--card)); border: 1px solid hsl(var(--border)); border-radius: var(--radius); padding: 22px; box-shadow: 0 4px 16px rgba(0,0,0,0.04);">
          <h5 style="margin: 0 0 16px; font-weight: 700; color: hsl(var(--foreground)); font-size: 1.2rem;">Swap Activity</h5>
          <p style="margin: 0 0 20px; color: hsl(var(--muted-foreground)); font-size: 0.9rem;">
            Manage your swap requests and view activity from other users.
          </p>
          
          <div class="row" style="margin: 0;">
            <div class="col s12 m6" style="padding: 0 8px 0 0; margin-bottom: 16px;">
              <a href="/swaps/outgoing" style="display: block; text-decoration: none; color: inherit;">
                <div style="background-color: hsl(var(--muted)); border: 1px solid hsl(var(--border)); border-radius: var(--radius); padding: 16px; transition: all 0.2s; cursor: pointer;" 
                     onmouseover="this.style.borderColor='hsl(var(--primary))'"
                     onmouseout="this.style.borderColor='hsl(var(--border))'">
                  <div style="display: flex; align-items: center; gap: 12px;">
                    <i class="material-icons" style="color: hsl(var(--primary)); font-size: 24px;">send</i>
                    <div>
                      <div style="font-weight: 600; color: hsl(var(--foreground)); font-size: 1rem;">My Requests</div>
                      <div style="color: hsl(var(--muted-foreground)); font-size: 0.8rem;">Swap requests you've made</div>
                    </div>
                  </div>
                </div>
              </a>
            </div>
            
            <div class="col s12 m6" style="padding: 0 0 0 8px; margin-bottom: 16px;">
              <a href="/swaps/incoming" style="display: block; text-decoration: none; color: inherit;">
                <div style="background-color: hsl(var(--muted)); border: 1px solid hsl(var(--border)); border-radius: var(--radius); padding: 16px; transition: all 0.2s; cursor: pointer;" 
                     onmouseover="this.style.borderColor='hsl(var(--primary))'"
                     onmouseout="this.style.borderColor='hsl(var(--border))'">
                  <div style="display: flex; align-items: center; gap: 12px;">
                    <i class="material-icons" style="color: hsl(var(--primary)); font-size: 24px;">inbox</i>
                    <div>
                      <div style="font-weight: 600; color: hsl(var(--foreground)); font-size: 1rem;">Received Requests</div>
                      <div style="color: hsl(var(--muted-foreground)); font-size: 0.8rem;">Requests from other users</div>
                    </div>
                  </div>
                </div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- My Items Section -->
    <div class="row" style="margin-top: 24px;">
      <div class="col s12">
        <div style="background-color: hsl(var(--card)); border: 1px solid hsl(var(--border)); border-radius: var(--radius); padding: 22px; box-shadow: 0 4px 16px rgba(0,0,0,0.04);">
          <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 16px;">
            <h5 style="margin: 0; font-weight: 700; color: hsl(var(--foreground)); font-size: 1.2rem;">My Items</h5>
            <a href="/items/new" class="btn waves-effect waves-light" style="background-color: hsl(var(--primary)); border-radius: 999px; box-shadow: none;">
              <i class="material-icons left">add</i>
              New Item
            </a>
          </div>
          
          <% if (userItems && userItems.length > 0) { %>
            <div class="row" style="margin: 0;">
              <% userItems.forEach(function(item) { %>
                <div class="col s12 m6 l4" style="margin-bottom: 16px;">
                  <div style="background-color: hsl(var(--background)); border: 1px solid hsl(var(--border)); border-radius: var(--radius); overflow: hidden; transition: all 0.2s; height: 100%;" onmouseover="this.style.borderColor='hsl(var(--primary))'" onmouseout="this.style.borderColor='hsl(var(--border))'">
                    <div style="position: relative; height: 160px; background-color: hsl(var(--muted)); display: flex; align-items: center; justify-content: center; overflow: hidden;">
                      <% if (item.imageUrl) { %>
                        <img src="<%= item.imageUrl %>" alt="<%= item.title %>" style="width: 100%; height: 100%; object-fit: cover;" />
                      <% } else { %>
                        <i class="material-icons" style="font-size: 48px; color: hsl(var(--muted-foreground)); opacity: 0.6;">image</i>
                      <% } %>
                      <% if (item.status === 'swapped') { %>
                        <span style="position: absolute; top: 8px; right: 8px; font-size: 0.7rem; padding: 4px 8px; border-radius: 999px; background-color: hsl(var(--destructive)); color: hsl(var(--destructive-foreground)); font-weight: 500;">Swapped</span>
                      <% } %>
                    </div>
                    <div style="padding: 14px;">
                      <h6 style="margin: 0 0 8px; font-weight: 600; color: hsl(var(--foreground)); font-size: 1rem; line-height: 1.3;">
                        <a href="/items/<%= item.itemId %>" style="color: inherit; text-decoration: none;">
                          <%= item.title %>
                        </a>
                      </h6>
                      <% if (item.itemType) { %>
                        <span style="font-size: 0.75rem; padding: 4px 8px; border-radius: 999px; background-color: hsl(var(--muted)); color: hsl(var(--foreground)); margin-bottom: 8px; display: inline-block;"><%= item.itemType %></span>
                      <% } %>
                      <p style="margin: 8px 0 12px; color: hsl(var(--muted-foreground)); font-size: 0.85rem; line-height: 1.4;">
                        <%= (item.description || '').length > 80 ? (item.description.slice(0, 80) + '...') : (item.description || '') %>
                      </p>
                      <div style="display: flex; gap: 6px;">
                        <a href="/items/<%= item.itemId %>/edit" class="btn-small waves-effect waves-light" style="background-color: hsl(var(--primary)); text-align: center;">
                          <i class="material-icons left" style="margin-right: 4px;">edit</i>
                          EDIT
                        </a>
                        <a href="#delete-modal-<%= item.itemId %>" class="btn-small waves-effect waves-light modal-trigger" style="background-color: #dc2626; color: white; text-align: center; min-width: 44px; padding: 0 8px;">
                          <i class="material-icons" style="font-size: 16px;">delete</i>
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              <% }); %>
            </div>
          <% } else { %>
            <div style="text-align: center; padding: 40px 20px;">
              <i class="material-icons" style="font-size: 64px; color: hsl(var(--muted-foreground)); opacity: 0.5; margin-bottom: 16px;">inventory_2</i>
              <p style="color: hsl(var(--muted-foreground)); font-size: 1.1rem; margin-bottom: 20px;">You haven't posted any items yet.</p>
              <a href="/items/new" class="btn waves-effect waves-light" style="background-color: hsl(var(--primary)); border-radius: 999px;">
                <i class="material-icons left">add</i>
                Post Your First Item
              </a>
            </div>
          <% } %>
        </div>
      </div>
    </div>

  </div>
</section>

<!-- Delete Confirmation Modals -->
<% if (userItems && userItems.length > 0) { %>
  <% userItems.forEach(function(item) { %>
    <div id="delete-modal-<%= item.itemId %>" class="modal" style="border-radius: var(--radius); max-width: 500px;">
      <div class="modal-content" style="padding: 24px;">
        <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 16px;">
          <i class="material-icons" style="color: #dc2626; font-size: 28px;">warning</i>
          <h4 style="margin: 0; color: hsl(var(--foreground)); font-weight: 700;">Delete Item</h4>
        </div>
        <p style="color: hsl(var(--muted-foreground)); margin: 0 0 20px; line-height: 1.5;">
          Are you sure you want to delete "<strong><%= item.title %></strong>"? This action cannot be undone.
        </p>
      </div>
      <div class="modal-footer" style="background-color: hsl(var(--muted)); padding: 16px 24px;">
        <div style="display: flex; gap: 12px; justify-content: flex-end;">
          <a href="#!" class="modal-close btn-flat waves-effect waves-light" style="color: hsl(var(--muted-foreground));">Cancel</a>
          <form method="POST" action="/items/<%= item.itemId %>?_method=DELETE" style="display: inline;">
            <button type="submit" class="btn waves-effect waves-light" style="background-color: #dc2626; color: white; border-radius: 999px;">
              <i class="material-icons left">delete</i>
              DELETE ITEM
            </button>
          </form>
        </div>
      </div>
    </div>
  <% }); %>
<% } %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize modals
    const modals = document.querySelectorAll('.modal');
    if (window.M && modals.length) {
      M.Modal.init(modals);
    }
  });
</script>
